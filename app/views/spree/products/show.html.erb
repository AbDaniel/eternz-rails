<% @body_id = 'product-details' %>

<% cache [I18n.locale, current_currency, @product, @product.possible_promotions] do %>
<div data-hook="product_show" itemscope itemtype="https://schema.org/Product">
  <div class="col l4" data-hook="product_left_part">
    <div data-hook="product_left_part_wrap">
      <div class="card large">
        <div data-hook="product_images" id="product-images">
          <div class="card-image">
            <div class="panel panel-default" data-hook id="main-image">
              <div class="panel-body text-center">
                <%= render :partial => 'image' %>
              </div>
            </div>
          </div>
          <div class="card-content">
            <div data-hook id="thumbnails">
              <%= render :partial => 'thumbnails' %>
            </div>
          </div>
        </div>
      </div>
      <div data-hook="product_properties">
        <%= render :partial => 'properties' %>
      </div>
      <div data-hook="promotions">
        <%= render :partial => 'promotions' %>
      </div>
    </div>
  </div>
  <div class="col l8" data-hook="product_right_part">
    <div data-hook="product_right_part_wrap">
      <div data-hook="product_description" id="product-description">
        <h5 class="product-title margin-top-5" itemprop="name"><%= @product.name %></h5>

        <div class="well" data-hook="description" itemprop="description">
          <%= product_description(@product) rescue Spree.t(:product_has_no_description) %>
        </div>

        <div data-hook="cart_form" id="cart-form">
          <%= render :partial => 'cart_form' %>
        </div>
      </div>
      <%= render :partial => 'taxons' %>
    </div>
  </div>
</div>
<% end %>
